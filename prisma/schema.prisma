generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Schedule {
  id             String   @id @default(uuid())
  nome_cliente   String
  numero_celular String
  data           DateTime
  hora_inicio    String
  hora_fim       String
  feriado        Boolean  @default(false)
  touro_mecanico Int      @default(0)
  fotos          Int      @default(0)
  garcom         Int      @default(0)
  dj             Int      @default(0)
  climatizacao   Int      @default(0)
  churrasqueira  Int      @default(0)
  telao          Int      @default(0)
  taxa_luz       Int      @default(0)
  valor_buffet   Float    @default(0)
  observacao     String
  valor_sugerido Float
  valor_cobrado  Float

  @@unique([data, hora_inicio])
  @@unique([data, hora_fim])
}

model Value {
  versao           Int      @id @default(autoincrement())
  data_modificacao DateTime @default(now()) @updatedAt
  valor_padrao     Int
  valor_feriado    Int
  touro_mecanico   Int
  fotos            Int
  garcom           Int
  dj               Int
  climatizacao     Int
  churrasqueira    Int
  telao            Int
  taxa_luz         Int
}
